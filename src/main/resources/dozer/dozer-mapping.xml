<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">
    <mapping>
        <class-a>com.springboot.entity.User</class-a>
        <class-b>com.springboot.dto.UserDto</class-b>
        <field-exclude>
            <a>userRoles</a>
            <b>userRoleDtos</b>
        </field-exclude>
        <field-exclude>
            <a>appointments</a>
            <b>appointmentDtos</b>
        </field-exclude>
        <field-exclude>
            <a>diagnoses</a>
            <b>diagnosisDtos</b>
        </field-exclude>
    </mapping>

    <mapping>
        <class-a>com.springboot.entity.UserRole</class-a>
        <class-b>com.springboot.dto.UserRoleDto</class-b>
        <field-exclude>
            <a>users</a>
            <b>userDtos</b>
        </field-exclude>
    </mapping>

    <mapping>
        <class-a>com.springboot.entity.Appointment</class-a>
        <class-b>com.springboot.dto.AppointmentDto</class-b>
        <field-exclude>
            <a>user</a>
            <b>userDto</b>
        </field-exclude>
        <field-exclude>
            <a>patient</a>
            <b>patientDto</b>
        </field-exclude>
        <field-exclude>
            <a>diagnosis</a>
            <b>diagnosisDto</b>
        </field-exclude>
    </mapping>

    <mapping>
        <class-a>com.springboot.entity.Patient</class-a>
        <class-b>com.springboot.dto.PatientDto</class-b>
        <field-exclude>
            <a>appointments</a>
            <b>appointmentDtos</b>
        </field-exclude>
        <field-exclude>
            <a>diagnoses</a>
            <b>diagnosisDtos</b>
        </field-exclude>
    </mapping>

    <mapping>
        <class-a>com.springboot.entity.Diagnosis</class-a>
        <class-b>com.springboot.dto.DiagnosisDto</class-b>
        <field-exclude>
            <a>user</a>
            <b>userDto</b>
        </field-exclude>
        <field-exclude>
            <a>patient</a>
            <b>patientDto</b>
        </field-exclude>
        <field-exclude>
            <a>appointment</a>
            <b>appointmentDto</b>
        </field-exclude>
    </mapping>

    <mapping>
        <class-a>com.springboot.entity.DrugProfile</class-a>
        <class-b>com.springboot.dto.DrugProfileDto</class-b>
    </mapping>
</mappings>
